<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxPepe.PepeMuokkaaController">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <TextField fx:id="peliNimike" prefWidth="600.0" promptText="Pelin nimi">
                     <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </HBox.margin>
                  </TextField>
                  <ComboBox fx:id="peliAlusta" prefWidth="160.0" promptText="Alusta">
                     <HBox.margin>
                        <Insets bottom="15.0" right="15.0" top="15.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox prefWidth="200.0">
               <children>
                  <TextField fx:id="peliJulkaisuvuosi" prefHeight="25.0" prefWidth="159.0" promptText="Julkaisuvuosi">
                     <HBox.margin>
                        <Insets bottom="5.0" left="15.0" top="2.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="peliHankintavuosi" promptText="Hankintavuosi">
                     <HBox.margin>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="2.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pelilevy">
                     <HBox.margin>
                        <Insets bottom="5.0" left="20.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Text>
                  <ComboBox fx:id="peliKuntoLevy" prefWidth="160.0" promptText="Kunto" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ohjekirja">
                     <HBox.margin>
                        <Insets bottom="5.0" left="20.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Text>
                  <ComboBox fx:id="peliKuntoOhje" prefWidth="160.0" promptText="Kunto" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Kotelo">
                     <HBox.margin>
                        <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Text>
                  <ComboBox fx:id="peliKuntoKotelo" prefWidth="160.0" promptText="Kunto" />
               </children>
            </HBox>
            <HBox prefWidth="200.0">
               <children>
                  <TextField fx:id="peliLisatiedot" prefWidth="600.0" promptText="Lisatiedot">
                     <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#handlePeliMuokkaaSuorita" prefHeight="23.0" prefWidth="156.0" text="Muokkaa">
                     <HBox.margin>
                        <Insets top="9.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
</BorderPane>
