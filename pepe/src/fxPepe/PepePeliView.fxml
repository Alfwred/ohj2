<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@pepe.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxPepe.PepePeliController">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <TextField fx:id="peliNimike" prefWidth="500.0" promptText="Pelin nimike">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </TextField>
                  <ComboBox fx:id="peliAlusta" prefWidth="120.0" promptText="Alusta">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ComboBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
            <HBox prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Julkaisuvuosi">
                     <HBox.margin>
                        <Insets bottom="5.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="peliJulkaisuvuosi" prefHeight="25.0" prefWidth="159.0" promptText="Julkaisuvuosi">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hankintavuosi">
                     <HBox.margin>
                        <Insets bottom="5.0" left="20.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="peliHankintavuosi" promptText="Hankintavuosi">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pelilevy">
                     <HBox.margin>
                        <Insets bottom="5.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Text>
                  <ComboBox fx:id="peliKuntoLevy" prefWidth="120.0" promptText="Kunto" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ohjekirja">
                     <HBox.margin>
                        <Insets bottom="5.0" left="20.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Text>
                  <ComboBox fx:id="peliKuntoOhje" prefWidth="120.0" promptText="Kunto" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Kotelo">
                     <HBox.margin>
                        <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Text>
                  <ComboBox fx:id="peliKuntoKotelo" prefWidth="120.0" promptText="Kunto" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
            <HBox prefWidth="200.0">
               <children>
                  <TextField fx:id="peliLisatiedot" prefWidth="500.0" promptText="Lisatiedot">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#handleOK" prefWidth="100.0" text="OK">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Text fx:id="textIlmoitus" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </left>
</BorderPane>
