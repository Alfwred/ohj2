<?xml version="1.0" encoding="UTF-8"?>

<?import fi.jyu.mit.fxgui.ListChooser?>
<?import fi.jyu.mit.fxgui.StringGrid?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxPepe.PepeGUIController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Tiedosto">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleRekisteriAvaa" text="Avaa rekisteri" />
                  <MenuItem mnemonicParsing="false" onAction="#handleRekisteriTallenna" text="Tallenna rekisteri">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
              <MenuItem mnemonicParsing="false" onAction="#handleLopeta" text="Sulje ohjelma">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Muokkaa">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handlePeliLisaa" text="Lisää peli" />
                  <MenuItem mnemonicParsing="false" onAction="#handlePeliMuokkaa" text="Muokkaa peliä" />
              <MenuItem mnemonicParsing="false" onAction="#handlePeliPoista" text="Poista peli" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Apua!">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleInfo" text="Tietoa..." />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <center>
                        <StringGrid fx:id="gridPeliLista" emptyStyleClass="" rivit="# | Pelin nimi | Alusta | P | K | O | Hankintavuosi&#10;1 | Tomb Raider 1 | PS1 | 3 | 3 | 3 | 1997&#10;2 | Half-Life | PC | 1 | 2 | 3 | 1999&#10;3 | Crash Bandicoot 2 | PS1 | 2 | 3 | 3 | 1999&#10;4 | Luigi's Mansion | GC | 1 | 1 | 1 | 2016&#10;5 | Metal Gear Solid: Virtual Missions | PS1 | 2 | 2 | 3 | 2018&#10;6 | Metal Gear Solid: Phantom Pain | PC | 3 | 3 | 3 | 2016&#10;7 | Boulder Dash | C64 | 3 | 2 | 3 | 1986" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin></StringGrid>
                     </center>
                     <bottom>
                        <HBox prefHeight="30.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label fx:id="labelVirhe">
                                 <HBox.margin>
                                    <Insets left="10.0" top="5.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                     </bottom>
                     <top>
                        <ListChooser fx:id="chooserPelit" prefHeight="100.0" BorderPane.alignment="CENTER" />
                     </top>
                  </BorderPane>
               </center>
               <left>
                  <ScrollPane fx:id="panelPeli" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </left>
            </BorderPane>
         </center>
         <top>
            <BorderPane BorderPane.alignment="CENTER">
               <center>
                  <HBox BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handlePeliLisaa" text="LISÄÄ PELI">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <HBox.margin>
                              <Insets bottom="20.0" left="20.0" right="20.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handlePeliPoista" text="POISTA">
                           <HBox.margin>
                              <Insets bottom="20.0" right="20.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handlePeliMuokkaa" text="MUOKKAA">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <HBox.margin>
                              <Insets bottom="20.0" right="20.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleListaNouseva" text="↑">
                           <HBox.margin>
                              <Insets bottom="20.0" right="20.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleListaLaskeva" text="↓">
                           <HBox.margin>
                              <Insets bottom="20.0" right="20.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Button>
                        <TextField fx:id="hakuehto" onAction="#handleHakuehto" prefWidth="200.0" promptText="Syötä hakutermi">
                           <HBox.margin>
                              <Insets bottom="20.0" right="20.0" top="6.0" />
                           </HBox.margin>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#handleHakuehto" text="HAE">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <HBox.margin>
                              <Insets bottom="20.0" right="15.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleListaSuodata" text="SUODATA">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </HBox>
               </center>
            </BorderPane>
         </top>
      </BorderPane>
   </center>
</BorderPane>
