<?xml version="1.0" encoding="UTF-8"?>

<?import fi.jyu.mit.fxgui.StringGrid?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxPepe.PepeAlustaController">
   <right>
      <StringGrid fx:id="gridAlustat" emptyStyleClass="" prefWidth="350.0" rivit="#|Lyhenne|Nimi" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Uusi alusta:" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <TextField fx:id="alustaLyhenne" prefWidth="320.0" promptText="Alustan lyhenne">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefWidth="200.0">
               <children>
                  <TextField fx:id="alustaNimi" prefWidth="320.0" promptText="Alustan nimi">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </HBox>
            <HBox prefHeight="20.0">
               <children>
                  <Text fx:id="textIlmoitus" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" />
               </children>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="handleLISAA" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleUUSI" prefWidth="80.0" text="UUSI">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="handlePOISTA" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handlePOISTA" prefWidth="80.0" text="POISTA">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="handleOK" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleOK" prefWidth="80.0" text="OK">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
